{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:7000"
      },
      "Https": {
        "Url": "https://localhost:7001"
      }
    }
  },
  "ApiSettings": {
    "Name": "Minimal API Demo",
    "Version": "1.0.0",
    "Description": "A simple .NET 8 Minimal API demonstration"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200",
      "https://localhost:3000",
      "https://localhost:4200"
    ]
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "Window": "00:01:00",
    "SegmentsPerWindow": 10
  },
  "HealthChecks": {
    "Enabled": true,
    "Endpoint": "/health"
  },
  "Swagger": {
    "Enabled": true,
    "Title": "Minimal API Demo",
    "Description": "A demonstration of .NET 8 Minimal APIs",
    "Version": "v1",
    "Contact": {
      "Name": "API Support",
      "Email": "support@example.com"
    }
  }
} 